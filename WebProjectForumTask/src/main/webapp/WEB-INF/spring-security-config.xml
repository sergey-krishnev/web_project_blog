<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns="http://www.springframework.org/schema/security"
         xmlns:b="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <http realm="WebProject Forum" use-expressions="false">
        <intercept-url pattern="/admin/**" access="ROLE_ADMIN"/>
        <intercept-url pattern="/blog/subjects/**" access="ROLE_USER" method="POST"/>
        <intercept-url pattern="/blog/subjects/**" access="ROLE_USER" method="PUT"/>
        <intercept-url pattern="/blog/comments/**" access="ROLE_USER" method="POST"/>
        <intercept-url pattern="/post/add" access="ROLE_USER"/>
        <intercept-url pattern="/post/**/update" access="ROLE_USER"/>
        <intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>



        <form-login login-page="/login"
                    authentication-failure-url="/login.jsp?login_error=1"
                    default-target-url="/blog/all"/>
        <http-basic/>
        <logout logout-success-url="/login"/>
        <remember-me />
        <headers/>
        <csrf/>
    </http>

    <authentication-manager>

        <!--<authentication-provider user-service-ref="jdbcGroupsImpl"/>-->

        <authentication-provider>
            <user-service>
                <user name="admin" password="admin" authorities="ROLE_USER, ROLE_ADMIN" />
                <user name="user" password="user" authorities="ROLE_USER" />
            </user-service>
        </authentication-provider>
    </authentication-manager>

    <global-method-security secured-annotations="enabled" />
    <b:bean id="webSecurityExpressionHandler" class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
</b:beans>