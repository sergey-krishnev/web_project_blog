    <b:bean id="appUserDetailsService"
          class="hibernate.service.implementations.AppUserDetailsService"/>

    <security:authentication-manager>
        <security:authentication-provider
                user-service-ref="appUserDetailsService" >
        </security:authentication-provider>
    </security:authentication-manager>

    <b:bean id="webSecurityExpressionHandler" class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
</b:beans>